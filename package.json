{
  "name": "docker-study",
  "version": "0.0.1",
  "description": "Let's learn to use Docker, just do it!",
  "repository": "git@github.com:JounQin/docker-study.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "nodemon",
    "build": "rimraf dist && cross-env DEBUG=1stg:* NODE_ENV=production concurrently \"webpack --config build/webpack.client.ts\" \"webpack --config build/webpack.server.ts\"",
    "start": "cross-env DEBUG=1stg:* node dist/server",
    "docker:build": "docker build -t docker-study .",
    "docker:start": "docker run -d --name docker-study -p 80:7000 docker-study",
    "lint": "tslint -p . -t stylish",
    "precommit": "lint-staged",
    "prune": "yarn --production --ignore-optional --ignore-scripts --prefer-offline --force"
  },
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "tslint -p . -t stylish --fix",
      "git add"
    ]
  },
  "nodemonConfig": {
    "exec": "cross-env DEBUG=1stg:* NODE_ENV=development ts-node server",
    "ext": "ts",
    "watch": [
      "server"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "cross-env": "^5.2.0",
    "debug": "^3.1.0",
    "koa": "^2.5.2",
    "koa-static": "^5.0.0",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "rimraf": "^2.6.2"
  },
  "devDependencies": {
    "@types/debug": "^0.0.30",
    "@types/html-webpack-plugin": "^3.2.0",
    "@types/koa": "^2.0.46",
    "@types/koa-static": "^4.0.0",
    "@types/koa-webpack": "^5.0.1",
    "@types/node": "^10.9.2",
    "@types/react": "^16.4.11",
    "@types/react-dom": "^16.0.7",
    "@types/webpack": "^4.4.11",
    "@types/webpack-env": "^1.13.6",
    "@types/webpack-merge": "^4.1.3",
    "@types/webpack-node-externals": "^1.6.3",
    "concurrently": "^4.0.0",
    "fork-ts-checker-webpack-plugin": "^0.4.9",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "koa-webpack": "^5.1.0",
    "lint-staged": "^7.2.2",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2",
    "pug": "^2.0.3",
    "pug-plain-loader": "^1.0.0",
    "ts-loader": "^4.5.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^3.0.1",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.1.0",
    "webpack-merge": "^4.1.4",
    "webpack-node-externals": "^1.7.2"
  }
}
